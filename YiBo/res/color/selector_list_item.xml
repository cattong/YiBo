<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
	<item android:state_pressed="false" android:state_enabled="true"
          android:state_focused="false"
	      android:color="@color/list_item_normal" 
          android:drawable="@drawable/bg_list_item_normal"/>
    <item android:state_pressed="true" android:state_enabled="true"
          android:color="@color/list_item_pressed" 
          android:drawable="@drawable/bg_list_item_pressed"/>
    <item android:state_pressed="false" android:state_enabled="true"
          android:state_focused="true" android:color="@color/list_item_focused" 
          android:drawable="@drawable/bg_list_item_pressed"/>
    <item android:state_pressed="false" android:state_enabled="false"
          android:state_focused="true" android:color="@color/list_item_disabled" 
          android:drawable="@drawable/bg_list_item_normal"/>
    <item android:state_pressed="false" android:state_enabled="false"
          android:state_focused="false" android:color="@color/list_item_focused" 
          android:drawable="@drawable/bg_list_item_normal"/>
</selector>
