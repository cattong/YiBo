<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/llAccountManage"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	android:orientation="horizontal"
	android:gravity="center_vertical"
	android:paddingBottom="4sp"
	android:paddingTop="4sp"
	android:paddingLeft="8sp"
	android:paddingRight="16sp"
	android:focusable="true"
	android:background="@drawable/selector_frame_item_no_corner">

	<ImageView 
	    android:id="@+id/ivProfileImage"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:src="@drawable/icon_group" />
	<LinearLayout 
	    android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_weight="1"
		android:layout_marginLeft="8sp"
		android:layout_marginRight="2sp"
		android:orientation="vertical">
	    <TextView
	        android:id="@+id/tvProfileName" 
	        android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:ellipsize="end"
		    android:singleLine="true"
		    android:text="@string/label_account_manager"
		    style="@style/list_user_profile_name">
	    </TextView>

		<TextView android:id="@+id/tvImpress"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="@string/label_account_support"
			style="@style/list_user_impress">
		</TextView>
	</LinearLayout>

	<ImageView 
	    android:id="@+id/ivMoreDetail"
	    android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:background="@drawable/icon_more_detail"/>
</LinearLayout>
