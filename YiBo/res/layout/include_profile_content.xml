<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/llContentPanel"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	android:layout_weight="1"
	android:scrollbars="none"
	android:padding="0sp"
	android:background="@color/background_content">
	<LinearLayout
		android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:orientation="vertical"
	    android:padding="8sp"
	    android:layout_weight="1">

		<LinearLayout 
		    android:id="@+id/llVerifyInfo"
			android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
		    android:layout_marginBottom="8sp"
		    android:padding="8sp"
		    android:background="@drawable/bg_frame_normal"
		    android:orientation="vertical"
		    android:visibility="gone">
			<TextView
				android:id="@+id/tvVerifyInfo"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:hint="@string/hint_profile_Verify_Info"
				android:textAppearance="@style/personal_desc">
			</TextView>
		</LinearLayout>
		
		<LinearLayout
		    android:id="@+id/llDescription"
			android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
		    android:padding="8sp"
		    android:background="@drawable/bg_frame_normal"
		    android:orientation="vertical">
			<TextView
				android:id="@+id/tvDescription"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:hint="@string/hint_personal_default_description"
				android:textAppearance="@style/personal_desc">
			</TextView>
		</LinearLayout>

		<LinearLayout
		    android:id="@+id/llSocialGraph" 
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:layout_marginTop="8sp"
			android:padding="1sp"
			android:orientation="horizontal"
			android:background="@drawable/bg_frame_normal">

			<LinearLayout 
			    android:id="@+id/llFriendsCount"
				android:layout_width="fill_parent"
				android:layout_height="fill_parent"
				android:layout_weight="1"
				android:orientation="vertical"
				android:padding="5sp"
				android:background="@drawable/selector_frame_item_left_corner">
				<TextView
				    android:id="@+id/tvFriendsCount"
					android:layout_width="fill_parent"
					android:layout_height="fill_parent"
					android:gravity="center"
					android:text="0"
					android:layout_weight="1"
					style="@style/personal_count"/>
				<TextView 
				    android:id="@+id/tvFriendsLabel"
					android:layout_width="fill_parent"
					android:layout_height="fill_parent"
					android:gravity="center"
					android:layout_weight="1"
					android:text="@string/label_personal_friends"
					style="@style/personal_count_label"/>
			</LinearLayout>
			<ImageView 
			    android:id="@+id/ivLineSeperator_1"
			    android:layout_width="wrap_content"
			    android:layout_height="fill_parent"
			    android:background="@drawable/line_seperator">
	        </ImageView>

			<LinearLayout 
			    android:id="@+id/llFollowersCount"
				android:orientation="vertical"
				android:layout_width="fill_parent"
				android:layout_height="fill_parent"
				android:layout_weight="1"
				android:padding="3sp"
				android:background="@drawable/selector_frame_item_no_corner">
				<TextView android:id="@+id/tvFollowersCount"
					android:layout_width="fill_parent"
					android:layout_height="fill_parent"
					android:gravity="center"
					android:layout_weight="1"
					android:text="0"
					style="@style/personal_count"/>
				<TextView
					android:id="@+id/tvFollowersLabel"
					android:layout_width="fill_parent"
					android:layout_height="fill_parent"
					android:gravity="center"
					android:layout_weight="1"
					android:text="@string/label_personal_followers"
					style="@style/personal_count_label"/>
			</LinearLayout>
			<ImageView 
			    android:id="@+id/ivLineSeperator_2"
				android:layout_width="wrap_content"
			    android:layout_height="fill_parent"
			    android:background="@drawable/line_seperator">
	        </ImageView>

			<LinearLayout
				android:id="@+id/llStatusesCount"
				android:layout_width="fill_parent"
				android:layout_height="fill_parent"
				android:layout_weight="1"
				android:orientation="vertical"
				android:padding="4sp"
				android:background="@drawable/selector_frame_item_right_corner">
				<TextView
					android:id="@+id/tvStatusesCount"
					android:layout_width="fill_parent"
					android:layout_height="fill_parent"
					android:gravity="center"
					android:text="0"
					android:layout_weight="1"
					style="@style/personal_count"/>
				<TextView
					android:id="@+id/tvStatusesLabel"
					android:layout_width="fill_parent"
					android:layout_height="fill_parent"
					android:gravity="center"
					android:layout_weight="1"
					android:text="@string/label_personal_statuses"
					style="@style/personal_count_label"/>
			</LinearLayout>
		</LinearLayout>

		<LinearLayout
			android:id="@+id/llFavsAndBlocks"
			android:orientation="vertical"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:layout_marginTop="8sp"
			android:padding="1sp"
			android:background="@drawable/bg_frame_normal"
			android:visibility="gone">
			<LinearLayout
				android:id="@+id/llFavorites"
				android:orientation="horizontal"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:padding="8sp"
				android:gravity="center_vertical"
				android:background="@drawable/selector_frame_item_top_corner" >
				<TextView
					android:id="@+id/tvFavoritesLabel"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="@string/label_personal_favorites"
					android:textSize="16sp"
					style="@style/personal_count_label"/>
				<TextView
					android:id="@+id/tvFavoritesCount"
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:layout_weight="1"
					android:text="(0)"
					android:textSize="16sp"
					style="@style/personal_count"/>
				<ImageView
				    android:id="@+id/ivFavoritesMore"
				    android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginRight="8sp"
					android:background="@drawable/icon_more_detail" />
			</LinearLayout>
			<ImageView
			    android:id="@+id/ivLineSeperator_3"
				android:layout_width="fill_parent"
			    android:layout_height="wrap_content"
			    android:background="@drawable/line_seperator">
	        </ImageView>
	        
	        <LinearLayout
                android:id="@+id/llTopics"
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:padding="8sp"
                android:gravity="center_vertical"
                android:background="@drawable/selector_frame_item_no_corner" >
                <TextView
                    android:id="@+id/tvTopicLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/label_personal_topics"
                    android:textSize="16sp"
                    style="@style/personal_count_label"/>
                <ImageView
                    android:id="@+id/ivTopicMore"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="8sp"
                    android:background="@drawable/icon_more_detail" />
            </LinearLayout>
            <ImageView
                android:id="@+id/ivLineSeperator_4"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/line_seperator">
            </ImageView>
	        
			<LinearLayout
				android:id="@+id/llBlocks"
				android:orientation="horizontal"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:padding="8sp"
				android:gravity="center_vertical"
				android:background="@drawable/selector_frame_item_bottom_corner" >
				<TextView
					android:id="@+id/tvBlocksLabel"
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:layout_weight="1"
					android:text="@string/label_personal_blacklist"
					android:textSize="16sp"
					style="@style/personal_count_label"/>
				<ImageView
				    android:id="@+id/ivBlocksMore"
				    android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginRight="8sp"
					android:background="@drawable/icon_more_detail" />
			</LinearLayout>
		</LinearLayout>

        <include layout="@layout/include_profile_status"/>
	</LinearLayout>
</ScrollView>
