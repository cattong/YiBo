<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	android:layout_weight="1"
	android:paddingBottom="4sp"
	android:paddingTop="4sp"
	android:paddingLeft="8sp"
	android:paddingRight="8sp"
	android:gravity="center_vertical"
	android:orientation="horizontal">

	<ImageView android:id="@+id/ivProfileImage"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:paddingRight="8sp">
	</ImageView>

	<LinearLayout android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_weight="1"
		android:orientation="vertical">
		<TextView android:id="@+id/tvScreenName"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
			style="@style/widget_tweet_progress_list_screen_name">
		</TextView>

		<TextView android:id="@+id/tvSPName"
		    android:layout_width="wrap_content"
	    	android:layout_height="wrap_content"
			style="@style/widget_tweet_progress_list_sp_name">
		</TextView>
	</LinearLayout>

    <ImageView android:id="@+id/ivTweetState"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/level_progress"/>
</LinearLayout>

