<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent" 
	android:layout_height="wrap_content"
	android:orientation="horizontal"
	android:paddingTop="2sp"
	android:paddingBottom="2sp"
	android:paddingLeft="8sp"
	android:paddingRight="8sp">

	<LinearLayout android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_weight="1"
		android:orientation="vertical">
		<LinearLayout android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:layout_marginRight="2sp"
			android:orientation="horizontal">
			<TextView android:id="@+id/tvScreenName"
				android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_weight="1"
		        android:gravity="left"
			    android:textAppearance="@style/comment_screen_name">
			</TextView>
			
			<TextView android:id="@+id/tvCreatedAt"
			    android:hint="@string/label_loading"
				android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
				android:layout_weight="1"
				android:gravity="right"
				android:textAppearance="@style/comment_time">
			</TextView>
		</LinearLayout>
	
		<TextView android:id="@+id/tvText"
		    android:hint="@string/label_loading"
			android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
			android:textAppearance="@style/comment_text">
		</TextView>
    </LinearLayout>
    
    <Button android:id="@+id/btnCommentReply" 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:focusable="false"
        android:background="@drawable/selector_btn_comment_reply" />
</LinearLayout>
